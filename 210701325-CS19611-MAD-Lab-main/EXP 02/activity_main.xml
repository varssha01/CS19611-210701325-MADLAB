<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:text="TextView"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:text="TextView"
        android:textSize="48sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btseven"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:textFontWeight="1" />
        <Button
            android:id="@+id/bteight"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="8"/>
        <Button
            android:id="@+id/btnine"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="9"/>

        <Button
            android:id="@+id/btdivision"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="/"
            android:textFontWeight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btfour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="4"/>
        <Button
            android:id="@+id/btfive"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="5"/>
        <Button
            android:id="@+id/btsix"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="6"/>
        <Button
            android:id="@+id/btmultiplication"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btone"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="1"/>
        <Button
            android:id="@+id/bttwo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="2"/>
        <Button
            android:id="@+id/btthree"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="3"/>
        <Button
            android:id="@+id/btsub"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btdot"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="."/>
        <Button
            android:id="@+id/btzero"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="0"/>
        <Button
            android:id="@+id/btequal"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="="/>
        <Button
            android:id="@+id/btadd"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textFontWeight="1"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btclear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="clear"
            android:textFontWeight="1" />


    </LinearLayout>

</LinearLayout>

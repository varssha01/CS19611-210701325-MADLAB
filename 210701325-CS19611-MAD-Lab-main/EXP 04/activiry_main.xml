<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/FragmentBasicDetail"
            android:name="com.example.exp4.StudentBasicDetail"
            tools:layout="@layout/fragment_student_basic_detail"/>
        <androidx.fragment.app.FragmentContainerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/FragmentMarkDetails"
            android:name="com.example.exp4.StudentMarkDetails"
            tools:layout="@layout/fragment_student_mark_details"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
